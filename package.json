{
  "name": "RemoteTest",
  "displayName": "RemoteTest",
  "description": "VSCode插件，实现文件上传、命令执行、日志监控和AI对话功能",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "RemoteTest-ai-chat",
          "title": "RemoteTest AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "RemoteTest-ai-chat": [
        {
          "id": "RemoteTest-ai-view",
          "name": "AI 对话",
          "type": "webview"
        }
      ],
      "explorer": [
        {
          "id": "autotestQuickCommands",
          "name": "快捷命令"
        },
        {
          "id": "autotestChanges",
          "name": "修改监控"
        },
        {
          "id": "autotestLogs",
          "name": "日志监控"
        }
      ]
    },
    "commands": [
      {
        "command": "RemoteTest.runTestCase",
        "title": "RemoteTest: 运行"
      },
      {
        "command": "RemoteTest.uploadFile",
        "title": "RemoteTest: 上传文件",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "RemoteTest.syncFile",
        "title": "RemoteTest: 下载文件",
        "icon": "$(cloud-download)"
      },
      {
        "command": "RemoteTest.refreshLogs",
        "title": "RemoteTest: 刷新日志列表",
        "icon": "$(refresh)"
      },
      {
        "command": "RemoteTest.downloadLog",
        "title": "下载日志文件",
        "icon": "$(cloud-download)"
      },
      {
        "command": "RemoteTest.openLog",
        "title": "打开日志文件",
        "icon": "$(eye)"
      },
      {
        "command": "RemoteTest.reloadConfig",
        "title": "RemoteTest: 刷新配置",
        "icon": "$(sync)"
      },
      {
        "command": "RemoteTest.openConfig",
        "title": "RemoteTest: 打开配置文件",
        "icon": "$(gear)"
      },
      {
        "command": "RemoteTest.refreshChanges",
        "title": "RemoteTest: 刷新变更列表",
        "icon": "$(refresh)"
      },
      {
        "command": "RemoteTest.uploadProjectChanges",
        "title": "同步此项目所有变更",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "RemoteTest.uploadSelectedChange",
        "title": "同步此文件",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "RemoteTest.openChangeFile",
        "title": "打开文件",
        "icon": "$(eye)"
      },
      {
        "command": "RemoteTest.refreshQuickCommands",
        "title": "RemoteTest: 刷新快捷命令",
        "icon": "$(refresh)"
      },
      {
        "command": "RemoteTest.executeQuickCommand",
        "title": "执行命令",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "RemoteTest.refreshQuickCommands",
          "when": "view == autotestQuickCommands",
          "group": "navigation@1"
        },
        {
          "command": "RemoteTest.refreshLogs",
          "when": "view == autotestLogs",
          "group": "navigation@1"
        },
        {
          "command": "RemoteTest.reloadConfig",
          "when": "view == autotestLogs",
          "group": "navigation@2"
        },
        {
          "command": "RemoteTest.openConfig",
          "when": "view == autotestLogs",
          "group": "navigation@3"
        },
        {
          "command": "RemoteTest.refreshChanges",
          "when": "view == autotestChanges",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "RemoteTest.executeQuickCommand",
          "when": "view == autotestQuickCommands && viewItem == quickCommand",
          "group": "inline@1"
        },
        {
          "command": "RemoteTest.downloadLog",
          "when": "view == autotestLogs && viewItem == logFile",
          "group": "inline@1"
        },
        {
          "command": "RemoteTest.openLog",
          "when": "view == autotestLogs && viewItem == logFile",
          "group": "inline@2"
        },
        {
          "command": "RemoteTest.uploadProjectChanges",
          "when": "view == autotestChanges && viewItem == changeGroup",
          "group": "inline@1"
        },
        {
          "command": "RemoteTest.uploadSelectedChange",
          "when": "view == autotestChanges && viewItem == change",
          "group": "inline@1"
        },
        {
          "command": "RemoteTest.openChangeFile",
          "when": "view == autotestChanges && viewItem == change",
          "group": "inline@2"
        }
      ],
      "explorer/context": [
        {
          "command": "RemoteTest.runTestCase",
          "group": "RemoteTest@1"
        },
        {
          "command": "RemoteTest.uploadFile",
          "group": "RemoteTest@2",
          "title": "上传文件"
        },
        {
          "command": "RemoteTest.syncFile",
          "group": "RemoteTest@3",
          "title": "下载文件"
        }
      ]
    },
    "configuration": {
      "title": "RemoteTest",
      "properties": {
        "RemoteTest.configPath": {
          "type": "string",
          "default": "RemoteTest-config.json",
          "description": "配置文件路径"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "compile:test": "tsc -p ./test",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production",
    "webpack-dev": "webpack --mode development",
    "test": "npm run compile && npm run compile:test && node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'test/suite/*.test.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.0",
    "@types/ssh2": "^1.15.5",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "marked": "^17.0.2",
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dontfork/RemoteTest.git"
  }
}
