{
  "name": "autotest-plugin",
  "displayName": "AutoTest",
  "description": "VSCode插件，实现文件上传、命令执行、日志监控和AI对话功能",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autotest-ai-chat",
          "title": "AutoTest AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "autotest-ai-chat": [
        {
          "id": "autotest-ai-view",
          "name": "AI 对话",
          "type": "webview"
        }
      ],
      "explorer": [
        {
          "id": "autotestLogs",
          "name": "日志监控"
        }
      ]
    },
    "commands": [
      {
        "command": "autotest.uploadAndExecute",
        "title": "AutoTest: 上传文件并执行命令"
      },
      {
        "command": "autotest.refreshLogs",
        "title": "AutoTest: 刷新日志列表",
        "icon": "$(refresh)"
      },
      {
        "command": "autotest.downloadLog",
        "title": "AutoTest: 下载日志文件"
      },
      {
        "command": "autotest.openLog",
        "title": "AutoTest: 打开日志文件"
      },
      {
        "command": "autotest.reloadConfig",
        "title": "AutoTest: 刷新配置",
        "icon": "$(sync)"
      },
      {
        "command": "autotest.openConfig",
        "title": "AutoTest: 打开配置文件",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "autotest.refreshLogs",
          "when": "view == autotestLogs",
          "group": "navigation@1"
        },
        {
          "command": "autotest.reloadConfig",
          "when": "view == autotestLogs",
          "group": "navigation@2"
        },
        {
          "command": "autotest.openConfig",
          "when": "view == autotestLogs",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "autotest.downloadLog",
          "when": "view == autotestLogs && viewItem == logFile",
          "group": "inline@1"
        },
        {
          "command": "autotest.openLog",
          "when": "view == autotestLogs && viewItem == logFile",
          "group": "inline@2"
        }
      ]
    },
    "configuration": {
      "title": "AutoTest",
      "properties": {
        "autotest.configPath": {
          "type": "string",
          "default": "autotest-config.json",
          "description": "配置文件路径"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "compile:test": "tsc -p ./test",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && npm run compile:test && node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'test/suite/*.test.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.0",
    "@types/ssh2": "^1.15.5",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.1"
  }
}
